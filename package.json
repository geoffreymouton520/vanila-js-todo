{
  "name": "vanila-js-todo",
  "version": "1.0.0",
  "description": "A task tracker built with vanila typescript",
  "main": "index.html",
  "scripts": {
    "build": "webpack",
    "prettier:format": "prettier --write %npm_package_config_scanPath%",
    "prettier:lint": "prettier --check %npm_package_config_scanPath%",
    "eslint:lint": "eslint \"src/**/*.ts\"",
    "eslint:fix": "eslint --fix 'src/**/*.ts'"
  },
  "config": {
    "scanPath": "\"{,src/**/}*.{md,json,ts,css,scss}\""
  },
  "author": "geoffrey mouton",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node14": "^1.0.1",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "css-loader": "^6.5.0",
    "eslint": "8.2.0",
    "eslint-config-airbnb": "18.2.1",
    "prettier": "2.4.1",
    "sass": "^1.43.4",
    "sass-loader": "^12.3.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "uuid": "^8.3.2"
  }
}
